@{
    Layout = null;
}

@using MvcApplication20.Models;
@model IEnumerable<Person>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-2.2.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="~/Scripts/index.js"></script>
</head>
<body>
    <div class="container" style="margin-top: 40px;">

        <div class="row">
            <form action="/home/index">
                <div class="col-md-3">
                    <input type="text" name="name" class="form-control" placeholder="Search by First Name" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-block">Search</button>
                </div>
            </form>
            <div class="col-md-2">
                <button class="btn btn-primary btn-block" id="add-person">Add</button>
            </div>

        </div>

        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            @foreach (Person p in Model)
            {
                <tr>
                    <td>@p.FirstName</td>
                    <td>@p.LastName</td>
                    <td>@p.Age</td>
                    <td>
                        @* <a href="/home/delete?personid=@p.Id">Delete</a>*@
                        <form method="POST" action="/home/delete">
                            <input type="hidden" name="personid" value="@p.Id" />
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog">
        <form method="POST" action="/home/add">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">

                        <input type="text" name="firstName" class="form-control" placeholder="First Name" />
                        <input type="text" name="lastName" class="form-control" placeholder="Last Name" />
                        <input type="text" name="age" class="form-control" placeholder="Age" />

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary">Save changes</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </form>
    </div><!-- /.modal -->
</body>

</html>
